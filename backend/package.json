{
  "name": "medication-tracker-backend",
  "version": "1.0.0",
  "description": "Remote Pharmacy Medication Tracker - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "test:unit": "jest --testPathPatterns=unit --forceExit --detectOpenHandles",
    "test:integration": "jest --testPathPatterns=integration --forceExit --detectOpenHandles",
    "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
    "test:perf:seed": "node src/__tests__/performance/seed-perf-data.js",
    "test:perf": "artillery run src/__tests__/performance/order.perf.yml",
    "test:perf:requests": "artillery run src/__tests__/performance/request.perf.yml",
    "test:perf:inventory": "artillery run src/__tests__/performance/inventory.perf.yml"
  },
  "keywords": [
    "pharmacy",
    "medication",
    "tracker",
    "api"
  ],
  "license": "ISC",
  "dependencies": {
    "axios": "^1.13.5",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.9.5",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.7",
    "@types/supertest": "^7.2.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^11.0.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}